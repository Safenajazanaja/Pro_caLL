<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="50dp"
    android:gravity="center">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/iv_photo"
            style="@style/ImageViewPhoto" />


        <GridLayout
            style="@style/MatchWrap"
            android:layout_marginTop="@dimen/base_pow_four"
            android:columnCount="2"
            android:rowCount="3">

            <ImageView
                style="@style/ImageViewIcon"
                android:layout_marginTop="@dimen/base_zero"
                android:background="@drawable/ic_baseline_email_24" />

            <TextView
                android:id="@+id/tv_member"
                style="@style/TextViewLargeApplicationSub"
                android:layout_marginTop="@dimen/base_zero"
                android:text="รหัสสมาชิก" />

            <ImageView
                style="@style/ImageViewIcon"
                android:background="@drawable/ic_baseline_person_24" />

            <TextView
                android:id="@+id/tv_full_name"
                style="@style/TextViewLargeApplicationSub"
                android:text="ชื่อ-นาสกุล" />


            <ImageView
                style="@style/ImageViewIcon"
                android:background="@drawable/ic_baseline_phone_iphone_24" />

            <TextView
                android:id="@+id/tv_phone"
                style="@style/TextViewLargeApplicationSub"
                android:text="เบอร์" />

        </GridLayout>
    </LinearLayout>


</RelativeLayout>